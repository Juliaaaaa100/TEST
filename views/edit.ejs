<%- include('./partials/header.ejs') %>

<body>
    <h1>Edit To-Do</h1>
    <form action="/todos/<%= todo._id %>?_method=PUT" method="POST">


        <input type="hidden" name="_method" value="PUT">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= todo.title %>" required><br><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= todo.description %></textarea><br><br>

        

        <label for="todoByDate">Due Date:</label>
        <input type="date" id="todoByDate" name="todoByDate" value="<%= todo.todoByDate ? todo.todoByDate.toISOString().split('T')[0] : '' %>" required><br><br>

        <button type="submit">Update To-Do</button>
    </form>
    <a href="/todos/<%= todo._id %>">Back to To-Do</a>
</body>
</html>
