<%- include('./partials/header.ejs') %>

<style>
    body {
        background-color: rgb(156, 202, 225);
    }
    .container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
    }
</style>

<div class="container">
    <h1>To-Do Details</h1>
    <h2><%= todo.title %></h2>
    <p>Description: <%= todo.description %></p>
    <% if (todo.todoByDate) { %>
        <p>Due Date: <%= todo.todoByDate.toDateString() %></p>
    <% } else { %>
        <p>Due Date: No due date</p>
    <% } %>
    <a href="/todos/<%= todo._id %>/edit" class="btn btn-primary">Edit To-Do</a>
    <form action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Delete To-Do</button>
    </form>
    <a href="/todos" class="btn btn-secondary mt-3">Back to To-Do List</a>
</div>

<%- include('./partials/footer.ejs') %>
